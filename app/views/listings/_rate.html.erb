<h3><strong class="green-heading"><%= t(".rate_and_review") %></strong></h3>
<div></div>
<div class="row">
  <div class="col-xs-12 col-sm-6 wrap-rating">
    <h5><strong><%= t(".rate_these_categories") %>:</strong></h5>
    <p><%= t(".safety") %></p>
    <p class="safety-summ">
      <small>
            <% if @listing.safety_average %>
                (<%= "#{t('.average')}: #{@listing.safety_average.avg.round(2)}" %>
            <i class="fa fa-star-o"></i>, <%= @listing.safety_average.qty %><i class="fa fa-user-o"></i>)
            <% end %>
          </small>
    </p>
    <% if current_user %>
        <%= rating_for_user @listing, current_user, "safety", enable_half: true, half_show: true, disable_after_rate: false %>
    <% else %>
        <%= rating_for @listing, "safety", enable_half: true, half_show: true, disable_after_rate: false %>
    <% end %>
    <div></div>


    <p><%= t(".price") %></p>
    <p class="price-summ">
      <small>
            <% if @listing.price_average %>
                (<%= "#{t('.average')}: #{@listing.price_average.avg.round(2)}" %>
            <i class="fa fa-star-o"></i>, <%= @listing.price_average.qty %><i class="fa fa-user-o"></i>)
            <% end %>
          </small>
    </p>
    <% if current_user %>
        <%= rating_for_user @listing, current_user, "price", enable_half: true, half_show: true, disable_after_rate: false %>
    <% else %>
        <%= rating_for @listing, "price", enable_half: true, half_show: true, disable_after_rate: false %>
    <% end %>
    <div></div>


    <p><%= t(".location") %></p>
    <p class="location-summ">
      <small>
            <% if @listing.location_average %>
                (<%= "#{t('.average')}: #{@listing.location_average.avg.round(2)}" %>
            <i class="fa fa-star-o"></i>, <%= @listing.location_average.qty %><i class="fa fa-user-o"></i>)
            <% end %>
          </small>
    </p>
    <% if current_user %>
        <%= rating_for_user @listing, current_user, "location", enable_half: true, half_show: true, disable_after_rate: false %>
    <% else %>
        <%= rating_for @listing, "location", enable_half: true, half_show: true, disable_after_rate: false %>
    <% end %>
    <div></div>


    <p><%= t(".public_services") %></p>
    <p class="public-services-summ">
      <small>
            <% if @listing.public_services_average %>
                (<%= "#{t('.average')}: #{@listing.public_services_average.avg.round(2)}" %><i class="fa fa-star-o"></i>, <%= @listing.public_services_average.qty %>
            <i class="fa fa-user-o"></i>)
            <% end %>
          </small>
    </p>
    <% if current_user %>
        <%= rating_for_user @listing, current_user, "public_services", enable_half: true, half_show: true, disable_after_rate: false %>
    <% else %>
        <%= rating_for @listing, "public_services", enable_half: true, half_show: true, disable_after_rate: false %>
    <% end %>
    <div></div>

    <br><br>
    <p><strong><%= t(".general_property") %></strong></p>
    <p class="property-summ">
      <strong>
          <small>
            <% general_rate = @listing.property_general_rate %>
            <% if general_rate %>
                (<%= "#{t('.average')}: #{general_rate.round(2)}" %>
                <i class="fa fa-star-o"></i>)
            <% end %>
          </small>
      </strong>
    </p>
    <div class="general-property-star">
        <%= rating_for @listing, "general_property", enable_half: true, half_show: true, readonly: true, noRatedMsg: t('.general_property'), targetScore: general_rate %>
    </div>
    <div></div>

  </div>

  <div class="col-xs-12 col-sm-6 wrap-rating">
    <h5><strong><%= t(".rate_this_listing") %>:</strong></h5>
    <p><%= t(".complete") %></p>
    <p class="complete-summ">
      <small>
            <% if @listing.complete_info_average %>
                (<%= "#{t('.average')}: #{@listing.complete_info_average.avg.round(2)}" %>
            <i class="fa fa-star-o"></i>, <%= @listing.complete_info_average.qty %><i class="fa fa-user-o"></i>)
            <% end %>
          </small>
    </p>
    <% if current_user %>
        <%= rating_for_user @listing, current_user, "complete_info", enable_half: true, half_show: true, disable_after_rate: false %>
    <% else %>
        <%= rating_for @listing, "complete_info", enable_half: true, half_show: true, disable_after_rate: false %>
    <% end %>
    <div></div>


    <p><%= t(".image_quality") %></p>
    <p class="image-quality-summ">
      <small>
            <% if @listing.image_quality_average %>
                (<%= "#{t('.average')}: #{@listing.image_quality_average.avg.round(2)}" %>
            <i class="fa fa-star-o"></i>, <%= @listing.image_quality_average.qty %><i class="fa fa-user-o"></i>)
            <% end %>
          </small>
    </p>
    <% if current_user %>
        <%= rating_for_user @listing, current_user, "image_quality", enable_half: true, half_show: true, disable_after_rate: false %>
    <% else %>
        <%= rating_for @listing, "image_quality", enable_half: true, half_show: true, disable_after_rate: false %>
    <% end %>
    <div></div>


    <p><%= t(".quick_agile_response") %></p>
    <p class="speed-agility-answer-summ">
      <small>
            <% if @listing.speed_agility_answer_average %>
                (<%= "#{t('.average')}: #{@listing.speed_agility_answer_average.avg.round(2)}" %>
            <i class="fa fa-star-o"></i>, <%= @listing.speed_agility_answer_average.qty %><i class="fa fa-user-o"></i>)
            <% end %>
          </small>
    </p>
    <% if current_user %>
        <%= rating_for_user @listing, current_user, "speed_agility_answer", enable_half: true, half_show: true, disable_after_rate: false %>
    <% else %>
        <%= rating_for @listing, "speed_agility_answer", enable_half: true, half_show: true, disable_after_rate: false %>
    <% end %>
    <div></div>


    <br><br>
    <p><strong><%= t(".general_listing") %></strong></p>
    <p class="listing-summ">
      <strong>
        <small>
          <% general_rate = @listing.listing_general_rate %>
          <% if general_rate %>
              (<%= "#{t('.average')}: #{general_rate.round(2)}" %>
              <i class="fa fa-star-o"></i>)
          <% end %>
        </small>
      </strong>
    </p>
    <div class="general-listing-star">
        <%= rating_for @listing, "general_listing", enable_half: true, half_show: true, readonly: true, noRatedMsg: t('.general_listing'), targetScore: general_rate %>
    </div>
    <div></div>

  </div>
</div>