
<div id="new_fieldstay" class="listing_types">
  <div class="row">
    <div class="col-sm-3">
      <label class="required"><%= t(".listing_type") %>:</label>
        <%= f.select :listing_type, [[t("listings.sell"),Listing::LISTING_TYPE.index(:sale)],[t("listings.rent"),Listing::LISTING_TYPE.index(:rent)]], {include_blank: t("select")}, class: 'validate[required]'  %>
    </div>
    <div class="col-sm-3">
      <p>
        <label class="required"><%= t(".currency") %>:</label>
        <%= p.select :price_type, Listing::PRICE_TYPE.collect{|price_type| [t('listings.'+price_type.to_s), price_type.to_s] }, {selected: @listing.price_type}, class: 'validate[required]'  %>
      </p>
    </div>
    <input type="hidden" value="<%= @listing.price_type %>" id="listing[price_type]" name="listing[price_type]">
    <div class="col-sm-3">
      <p>
        <label class="required"><%= t(".price") %>:</label>
        <% if browser.device.mobile? && browser.chrome? %>
            <%= f.number_field :list_price, class: 'validate[required]', step: 1, value: number_with_precision(f.object.list_price, precision: t('number.currency.format.precision'), separator: t('number.currency.format.separator'), delimiter: '') %>
        <% else %>
            <%= f.text_field :list_price, class: 'validate[required]  money', value: number_with_precision(f.object.list_price, precision: t('number.currency.format.precision'), separator: t('number.currency.format.separator'), delimiter: t('number.currency.format.delimiter')), autocorrect: 'off', autocomplete: "off", spellcheck: 'false' %>
        <% end %>
      </p>
    </div>
    <div class="col-sm-3">
      <p>
        <label><%= t(".payment_options") %>:</label>
        <%= p.text_field :payment_options, value: @listing.properties["payment_options"], placeholder: "ej Financiacion propia 130 meses, 60 meses, plan contado" %>
      </p>
    </div>
    <div class="col-sm-3">
     <p>
        <label class="required"><%= t(".date_listed") %>:</label>
        <%= f.text_field :list_date, value: f.object.list_date ? l(f.object.list_date) : l(Date.today), class: 'validate[required] datepicker' %>
      </p>
    </div>
    <div class="col-md-8">
      <p>
       <label><%= t(".field_stay_use") %>:</label>
       <%= p.text_field :field_stay_use, placeholder: "ej Agricola mecanizado,  Ganaderia, Reforestacion, etc", value: @listing.properties["field_stay_use"] %>
      </p>
    </div>
  </div>
  <div class="row">

    <div class="col-sm-3 col-md-4">
      <p>
       <label class="required"><%= t(".hectares") %>:</label>
       <%= p.text_field :hectares, value: @listing.properties["hectares"], class: 'validate[required]' %>
      </p>
    </div>
    <div class="col-sm-3 col-md-4">
      <p>
       <label><%= t(".developed_hectares") %>:</label>
       <%= p.text_field :developed_hectares, value: @listing.properties["developed_hectares"] %>
      </p>
    </div>
    <div class="col-sm-3 col-md-4">
      <p>
       <label><%= t(".hectares_reservations") %>:</label>
       <%= p.text_field :hectares_reservations, value: @listing.properties["hectares_reservations"] %>
      </p>
    </div>

  </div>

  <div class="row">

    <div class="col-sm-12">
      <p>
        <label><%= t(".field_infrastructure_desc") %>:</label>
        <%= f.text_area :description, placeholder: "ej Pastura Gatton Panic, Casa patronal, Corral, 2km de alambrados nuevos, 21 bebedores, Etc" , value: @listing.description %>
      </p>
    </div>
    <div class="col-sm-12">
      <p>
        <label><%= t(".access") %>:</label>
        <%= p.text_field :access, placeholder: "ej sobre ruta, Camino de tierra, empedrado, etc", value: @listing.properties["access"] %>
      </p>
    </div>
    <div class="col-sm-12">
      <p>
        <label><%= t(".location_description") %>:</label>
        <%= p.text_field :location_description, placeholder: "ej Puntos de referencia,  Azucarera Paraguaya a 20 km, Mariscal Estigarribia a 50 km, etc", value: @listing.properties["location_description"] %>
      </p>
    </div>
    <div class="col-sm-12">
      <p>
        <label  class="required"><%= t(".short_description") %>:</label>
        <%= p.text_field :short_description, placeholder: "ej Estancia con 5.000 cabezas en engorde", value: @listing.properties["short_description"], class: 'validate[required] maxSize[40]', maxlength: 40 %>
      </p>
    </div>
    <div class="col-sm-12">
      <p>
        <label><%= t(".other_info") %>:</label>
        <%= p.text_field :other_info, placeholder: "ej Propiedad en oferta, animales se negocia aparte", value: @listing.properties["other_info"] %>
      </p>
    </div>
  </div>
</div>
