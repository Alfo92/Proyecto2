
<div id="new_subdivision" class="listing_types">
  <div class="row">
    <div class="col-sm-3">
      <label class="required"><%= t(".listing_type") %>:</label>
        <%= f.select :listing_type, [[t("listings.sell"),Listing::LISTING_TYPE.index(:sale)],[t("listings.rent"),Listing::LISTING_TYPE.index(:rent)]], {include_blank: t("select")}, class: 'validate[required]'  %>
    </div>
    <div class="col-sm-3">
      <p>
        <label class="required"><%= t(".currency") %>:</label>
        <%= p.select :price_type, Listing::PRICE_TYPE.collect{|price_type| [t('listings.'+price_type.to_s), price_type.to_s] }, {selected: @listing.price_type}, class: 'validate[required]'  %>
      </p>
    </div>
    <input type="hidden" value="<%= @listing.price_type %>" id="listing[price_type]" name="listing[price_type]">
    <div class="col-sm-3">
      <p>
        <label class="required"><%= t(".price") %>:</label>
        <% if browser.device.mobile? && browser.chrome? %>
            <%= f.number_field :list_price, class: 'validate[required]', step: 1, value: number_with_precision(f.object.list_price, precision: t('number.currency.format.precision'), separator: t('number.currency.format.separator'), delimiter: '') %>
        <% else %>
            <%= f.text_field :list_price, class: 'validate[required]  money', value: number_with_precision(f.object.list_price, precision: t('number.currency.format.precision'), separator: t('number.currency.format.separator'), delimiter: t('number.currency.format.delimiter')), autocorrect: 'off', autocomplete: "off", spellcheck: 'false' %>
        <% end %>
      </p>
    </div>
    <div class="col-sm-3">
      <p>
        <label><%= t(".payment_options") %>:</label>
        <%= p.text_field :payment_options, value: @listing.properties["payment_options"], placeholder: "ej Financiacion propia 130 meses, 60 meses, plan contado" %>
      </p>
    </div>
    <div class="col-sm-3">
     <p>
        <label><%= t(".date_listed") %>:</label>
        <%= f.text_field :list_date, value: f.object.list_date ? l(f.object.list_date) : l(Date.today), class: 'validate[required] datepicker' %>
      </p>
    </div>
    <div class="col-sm-6">
      <p>
        <label><%= t(".subdivision_type") %>:</label>
        <%= p.text_field :subdivision_type, placeholder: "ej Urbano, casa quinta, Comercial, etc", value: @listing.properties["subdivision_type"] %>
      </p>
    </div>
  </div>
  <div class="row">

    <div class="col-md-4">
      <p>
       <label><%= t(".subdivision_company") %>:</label>
       <%= p.text_field :subdivision_company, placeholder: "ej Particular, Imboliaria del Este, Raices, Rectora, etc", value: @listing.properties["subdivision_company"] %>
      </p>
    </div>
    <div class="col-sm-3 col-md-4">
      <p>
       <label><%= t(".division_name") %>:</label>
       <%= p.text_field :division_name, value: @listing.properties["division_name"], placeholder: "ej Fraccion Ikua Naranja, Las Mercedes, etc" %>
      </p>
    </div>
    <div class="col-sm-3 col-md-3">
      <p>
       <label><%= t(".subdivision_number") %>:</label>
       <%= p.text_field :subdivision_number, value: @listing.properties["subdivision_number"], placeholder: "71" %>
      </p>
    </div>

  </div>
  <div class="row">

    <div class="col-sm-4 col-md-8">
      <p>
        <label><%=raw t(".service_description") %>:</label>
        <%= p.text_field :service_description, value: @listing.properties["service_description"], placeholder: "ej Calle Empedrada, Luz electrica, Servicios  etc" %>
      </p>
    </div>
    <div class="col-sm-4 col-md-2">
      <p>
        <label><%= raw t(".m<sup>2</sup>") %>:</label>
        <%= p.text_field :square_meters, value: @listing.properties["square_meters"] %>
      </p>
    </div>

  </div>
  <div class="row">
    <div class="col-sm-3 col-md-6">
      <p>
        <label><%= t(".subdivision_use") %></label>
        <%= p.text_field :subdivision_use, value:@listing.properties["subdivision_use"], placeholder: "ej Residencia, Comercios, taller, etc" %>
      </p>
    </div>

  </div>
  <div class="row">
    <div class="col-sm-3 col-md-12">
      <p>
        <label><%= t(".subdivision_description") %></label>
        <%= f.text_area :description, value:@listing.properties["subdivision_description"], placeholder: "ej Terreno alto, Arboles, Terreno bajo, etc" %>
      </p>
    </div>
    <div class="col-sm-12">
      <p>
        <label><%= t(".location_description") %>:</label>
        <%= p.text_field :location_description, placeholder: "ej Puntos de referencia, Camino Caacupe Tobati, a 5 km de Frigochaco, Etc", value: @listing.properties["location_description"] %>
      </p>
    </div>
    <div class="col-sm-12">
      <p>
        <label class="required"><%= t(".short_description") %>:</label>
        <%= p.text_field :short_description, placeholder: "ej Nuevo lanzamiento en Limpio, excelente inversiÃ³n sobre camino empedrado", value: @listing.properties["short_description"], class: 'validate[required] maxSize[40]', maxlength: 40 %>
      </p>
    </div>
    <div class="col-sm-12">
      <p>
        <label><%= t(".other_info") %>:</label>
        <%= p.text_field :other_info, placeholder: "ej precios promocionales por Diciembre y Enero", value: @listing.properties["other_info"] %>
      </p>
    </div>
  </div>
</div>
